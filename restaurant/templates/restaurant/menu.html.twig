{% extends "base.html.twig" %}
{% block title %}{% endblock %}
{% block body %}
    <div class="container">
        <div class="container">
            <h3 class="text-center">Wij beschikken over {{ categories|length }} verschillende categoriÃ«en</h3><br>
            <div class="row gy-3">
                {%  for category in categories %}
                    <div class=" col-12 col-md-6">
                        <div class="card text-center border-dark" style="width: 20rem;">
                            <div class="card-body">
                                <h5 class="card-title ">{{ category.name }}</h5>
                                <a href="{{ path("app_item", {id: category.id}) }}">
                                    <img src="../img/category/{{ category.picture }} " class="card-img-top rounded" alt="{{ category.name }}" width="200px" height="175px">
                                </a>
                            </div>
                        </div><br>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}