        <div class="row">
            <div class="col-md-12 ">
                    {{ form_start(our_form) }}
                        <div class="symfony_form">
                            <h5 class="text-center">
                                Vragen? Of wil je iets kwijt aan ons vul dan het formulier hieronder in.
                            </h5>
                            <div class="form-group">
                                {{ form_row(our_form.name) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(our_form.email) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(our_form.message) }}
                            </div>
                            <div class="form-group">
                                <input class="btn" type="submit" value="Send">
                            </div>
                        </div>
                    {{ form_end(our_form) }}
