{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="container">
        <form class="symfony_login_form" method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <h3 class="h3 mb-3 font-weight-normal text-center">Inloggen kan je hier doen</h3>

            <div class="form-group">
                <div for="inputEmail" class="form_label">Email</div>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail"autocomplete="email" required autofocus>
            </div>

            <div class="form-group">
                <div for="inputPassword" class="form_label">Wachtwoord</div>
                <input type="password" name="password" id="inputPassword" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            </div>
            <div class="form-group">
                <label>
                    Nog geen account? <a href="/register">Registreer je nu!</a>
                </label>
            </div>

            <div class="form-group">
                <input class="btn btn-warning border-dark text-dark" type="submit" value="Login">
            </div>
        </form>
    </div>
{% endblock %}
