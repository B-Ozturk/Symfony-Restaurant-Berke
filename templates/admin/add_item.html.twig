{% extends 'adminBase.html.twig' %}
{% block title %}Add Item | Restaurant Berke{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-12">
                        <div class="alert alert-primary text-center" role="alert">
                            <strong>Voeg hier een item toe aan het menu</strong>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    {{ form_start(addItemForm) }}
                        <div class="symfony_add_item_form">
                            <div class="form-group">
                                {{ form_row(addItemForm.name) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(addItemForm.description) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(addItemForm.price) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(addItemForm.picture) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(addItemForm.category) }}
                            </div>
                            <div class="form-group">
                                <input class="btn" type="submit" value="Voeg toe">
                            </div>
                        </div>
                    {{ form_end(addItemForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}