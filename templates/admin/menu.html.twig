{% extends 'adminBase.html.twig' %}
{% block title %}Menu | Restaurant Berke{% endblock %}
{% block body %}
    <div class="container">
{#        <h1 class="text-center">Menu</h1>#}
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-info text-center font-weight-bold" aria-label="alert">
                    <h1>Menu</h1><br>Er zijn in totaal {{ menus|length }} items in de menu
                </div>
            </div>
        </div>
        <center>
            <a href="{{ path('admin_add_item') }}" class="btn btn-info add_item_button"><i class="fa-solid fa-plus"></i> Voeg item toe</a>
        </center>
        <div class="row gy-3">
            {%  for menu in menus %}
                <div class=" col-12 col-md-4">
                    <div class="card review_card border-dark">
                        <img src="../img/menu/{{ menu.picture }}" alt="{{ menu.name }}" class="card-img-top" width="200px" height="175px">
                        <div class="card-body">
                            <h5 class="card-title">{{ menu.name }}</h5>
                            <p class="card-text">{{ menu.description }}</p>
                            <h5 class="card-text mt-auto">â‚¬{{ menu.price }}</h5>
                            <div class="d-flex justify-content-between align-item-center">
                                <a href="{{ path('admin_edit_item', {id: menu.id}) }}" class="btn btn-warning"><i class="fa-solid fa-pen-to-square"></i> Aanpassen</a>
                                <a href="{{ path('admin_delete_item', {id: menu.id}) }}" class="btn btn-danger"><i class="fa-solid fa-trash"></i> Verwijderen</a>
                            </div>
                        </div>
                    </div><br>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}