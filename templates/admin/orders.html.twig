{% extends 'adminBase.html.twig' %}
{% block title %}Orders | Restaurant Berke{% endblock %}
{% block body %}
    <div class="container">
        <div class="row gy-3">
            <div class="col-md-12">
                <ul>
                {% for cart in carts %}
                    <li><a href="{{ path('admin_order', {id: cart.id}) }}">Order number: {{ cart.id }}</a></li>
                {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}