{%  extends 'userBase.html.twig' %}
{% block title %}Restaurant Berke{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-primary text-center" role="alert">
                    <strong>Hier kan je je wachtwoord aanpassen</strong>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    {{ form_start(password_form) }}
                    <div class="symfony_edit_profile_form">
                        <div class="form-group">
                            {{ form_row(password_form.password, {label: 'Password'}) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(password_form.repeatPassword, {label: 'Repeat password'}) }}
                        </div>
                        <div class="form-group">
                            <input class="btn btn-warning" type="submit" value="Wijzigen">
                        </div>
                    </div>
                    {{ form_end(password_form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}