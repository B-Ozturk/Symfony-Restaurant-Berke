{% extends "base.html.twig" %}
{% block title %} TST {% endblock %}
{% block body %}
    <div class="container">
        <div class="container">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="alert alert-info text-center font-weight-bold" aria-label="alert">
                            Er zijn hier intotaal {{ reviews|length }} reviews om te lezen
                        </div>
                    </div>
                </div>
                <div class="row gy-3">
                    {%  for review in reviews %}
                        <div class=" col-12 col-md-6">
                            <div class="card review_card border-dark">
                                <div class="card-body">
                                    <h4 class="card-title">
                                        <img src="{{ asset('img/profile/'~review.user.picture) }}" width="40px" height="40px" class="rounded">
                                         {{ review.user.name }}
                                    </h4>
                                    <h5 class="card-title">Review: {{ review.message }}</h5>
                                    <h6 class="card-text">Cijfer: {{ review.stars }}</h6>
                                    <small>Datum: {{ review.date |date('d-m-Y')}}</small>
                                </div>
                            </div><br>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}