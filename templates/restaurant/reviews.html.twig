{% extends "base.html.twig" %}
{% block title %} TST {% endblock %}
{% block body %}
    <div class="container">
        <div class="container">
            <div class="container">
                <h3 class="text-center">Er zijn hier intotaal {{ reviews|length }} reviews om te lezen</h3><br>
                <div class="row gy-3">
                    {%  for review in reviews %}
                        <div class=" col-12 col-md-6">
                            <div class="card review_card border-dark">
                                <div class="card-body">
                                    <h5 class="card-title">Review: {{ review.message }}</h5>
                                    <h6 class="card-text">Cijfer: {{ review.stars }}</h6>
                                    <small>Datum: {{ review.date |date('d-m-Y')}}</small>
                                </div>
                            </div><br>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}