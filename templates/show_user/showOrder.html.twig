{% extends 'userBase.html.twig' %}
{% block title %}Order | Restaurant Berke{% endblock %}
{% block body %}
    <div class="container">
        <div class="row gy-3">
            <div class="col-md-12">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Afbeelding</th>
                        <th scope="col">Naam</th>
                        <th scope="col">Prijs</th>
                        <th scope="col">Aantal</th>
                        <th scope="col">Totale prijs</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if order.items %}
                        {% set number= 1 %}
                        {% set total=0 %}
                        {% set price=0 %}
                        {% set counter= 0 %}
                        {% for item in order.items %}
                            <tr>
                                <th>{{ number }}</th>
                                <th><img src="{{ asset('img/menu/'~item.product.picture) }}" alt="{{ item.product.picture }}" width="100" height="50px"></th>
                                <th>{{ item.product.name }}</th>
                                <th>&euro; {{ item.product.price }}</th>
                                <th>{{amount_array[counter]}}</th>
                                <th>&euro; {{ (item.product.price * amount_array[counter])|number_format(2, '.', ',')}}</th>
                            </tr>
                            {%  set price = price + (item.product.price * amount_array[counter])|number_format(2, '.', ',')%}
                            {%  set counter= counter+1 %}
                            {% set total = total + price %}
                            {% set number= number+1 %}
                        {% endfor %}
                    {% endif %}
                    <tr>
                        <th>Totale prijs:</th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th>&euro; {{ price|number_format(2, '.', ',') }}</th>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}